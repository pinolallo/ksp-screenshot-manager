{
  "name": "ksp-screenshot-manager",
  "productName": "KSP Screenshot Manager",
  "version": "1.0.0",
  "description": "Organize and document your Kerbal Space Program screenshots with AI-powered tagging and mission stories",
  "main": "main.js",
  "author": {
    "name": "Silvestro'Pino' Di Pietro",
    "email": "sdipietro@mac.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pinolallo/ksp-screenshot-manager.git"
  },
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild",
    "build:mac": "electron-builder --mac",
    "build:mac-dmg": "electron-builder --mac dmg",
    "build:mac-dir": "electron-builder --mac dir",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder",
    "dist:all": "electron-builder --mac --win --linux",
    "release": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.ksp.screenshot-manager",
    "productName": "KSP Screenshot Manager",
    "copyright": "Copyright Silvestro Di Pietro Â© 2026",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "KSP Screenshot Manager"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "description": "Organize and document your Kerbal Space Program screenshots"
    },
    "dmg": {
      "title": "KSP Screenshot Manager ${version}",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "backgroundColor": "#1e3c72"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.{md,markdown}",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/{CHANGELOG,README}*"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^31.7.7",
    "electron-builder": "^26.7.0"
  }
}
